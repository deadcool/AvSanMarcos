<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:id="@+id/viewFlipper"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:id="@+id/primerimageview"
                android:src="@drawable/fisi" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:id="@+id/segundoimageview"
                android:src="@drawable/fii" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:id="@+id/tercerimageview"
                android:src="@drawable/fosm" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:id="@+id/cuartoimageview"
                android:src="@drawable/medicina" />
        </ViewFlipper>
    </LinearLayout>

</LinearLayout>